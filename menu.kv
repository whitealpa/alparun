

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .7
        Rectangle:
            size : self.size
    Label:
        font_size: root.width / 18
        font_name: "fonts/Cheerful Dynamite Free.ttf"
        text: root.parent.menu_title
        pos_hint: { "center_x": .5, "center_y": .62     }

